{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "interfaces/*"
          ]
      },
      "typeRoots": [
        "./@types",
        "./node_modules/@types",
      ],
  },
  "include": [
      "src/**/*"
, "index.ts", "index.ts"  ]
}